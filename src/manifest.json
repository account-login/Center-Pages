{
  "manifest_version": 2,
  "name": "Page-Align-Center",
  "short_name": "align-center",
  "description": "Chrome Extension for aligning pages to the center of your screen.",
  "version": "1.0.0",
  "author": "Felix Meyer-Wolters",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "aligner.js"
      ]
    }
  ]
}
